<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  tools:context="com.example.maokai.myapplicationdagger.view.MainActivity">

  <Button
    android:id="@+id/bt_constructor"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    android:text="使用构造参数实现依赖注入"/>
  <Button
    android:id="@+id/bt_model"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    android:layout_marginTop="30dip"
    android:text="使用model实现依赖注入"/>
  <Button
    android:id="@+id/bt_dependencies"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    android:layout_marginTop="30dip"
    android:text="测试dependencies"/>
  <Button
    android:id="@+id/bt_subcomponents"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    android:layout_marginTop="30dip"
    android:text="测试Subcomponents"/>

</LinearLayout>
